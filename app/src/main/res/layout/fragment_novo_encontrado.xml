<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2e2e2e"
    tools:context="com.example.amand.projetointegrador.novaDoacao">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/novaDoacaoPager"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="#fff"
            android:elevation="5dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/novaDoacaoImgBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/novaDoacaoPager"
            android:layout_marginRight="20dp"
            android:layout_marginTop="175dp"
            android:scaleType="center"
            android:src="@drawable/ic_add_photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/novaDoacaoPager"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:padding="15dp">


            <info.hoang8f.android.segmented.SegmentedGroup
                android:id="@+id/tipoAnimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:orientation="horizontal"
                app:sc_border_width="0.5dp"
                app:sc_checked_text_color="#eee"
                app:sc_corner_radius="2dp"
                app:sc_tint_color="#777">

                <RadioButton
                    android:id="@+id/button21"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="175dp"
                    android:padding="15dp"
                    android:text="Cachorro"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/button22"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="175dp"
                    android:padding="15dp"
                    android:text="Gato"
                    android:textSize="18sp" />
            </info.hoang8f.android.segmented.SegmentedGroup>

            <info.hoang8f.android.segmented.SegmentedGroup
                android:id="@+id/sexoAnimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:orientation="horizontal"
                app:sc_border_width="0.5dp"
                app:sc_checked_text_color="#eee"
                app:sc_corner_radius="2dp"
                app:sc_tint_color="#777">

                <RadioButton
                    android:id="@+id/btnFeminino"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="175dp"
                    android:padding="15dp"
                    android:text="Fêmea"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/btnMasculino"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="175dp"
                    android:padding="15dp"
                    android:text="Macho"
                    android:textSize="18sp" />
            </info.hoang8f.android.segmented.SegmentedGroup>

            <EditText
                android:id="@+id/racaAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_login"
                android:elevation="2dp"
                android:hint="Raça" />

            <EditText
                android:id="@+id/corAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_login"
                android:elevation="2dp"
                android:hint="Cor" />

            <EditText
                android:id="@+id/descricaoAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_login"
                android:elevation="2dp"
                android:ems="10"
                android:hint="Observações"
                android:inputType="textMultiLine"
                android:lines="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="Localização do animal"
                android:textSize="18sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Utilizar minha localização atual"
                    android:textColor="#555"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Digitar endereço"
                    android:textColor="#555"
                    android:textSize="16sp" />
            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_login"
                android:elevation="2dp"
                android:hint="Digite o endereço"
                android:visibility="gone" />

            <com.google.android.gms.maps.MapView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:visibility="gone">

            </com.google.android.gms.maps.MapView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@color/colorAccent"
                android:elevation="2dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Enviar anúncio"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18dp" />


        </LinearLayout>

    </RelativeLayout>
</ScrollView>

