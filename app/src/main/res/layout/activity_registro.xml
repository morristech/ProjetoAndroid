        <EditText
            android:id="@+id/dataNascimentoNovaConta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="15dp"
            android:background="#a1eeeeee"
            android:elevation="2dp"
            android:padding="15dp"
            android:ems="10"
            android:hint="Data de Nascimento"
            android:inputType="date"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="15dp"
            android:background="#a1eeeeee"
            android:elevation="2dp"
            android:padding="15dp"
            android:hint="Senha"
            android:inputType="textPassword"
            android:id="@+id/senhaNovaConta"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="15dp"
            android:background="#a1eeeeee"
            android:elevation="2dp"
            android:padding="15dp"
            android:hint="Confirmar Senha"
            android:inputType="textPassword"
            android:id="@+id/confirmaSenhaNovaConta"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@color/colorAccent"
            android:elevation="2dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Abrir uma conta"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18dp"
            android:id="@+id/abrirNovaConta"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressoRegistro"
            android:layout_gravity="center_horizontal"
            android:elevation="10dp"
            android:visibility="invisible"/>


    </LinearLayout>

</ScrollView>
