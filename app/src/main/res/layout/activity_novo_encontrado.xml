<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amand.projetointegrador.encontrado.novoEncontradoActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/novoEncontradoPager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/addimage1"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/addimage2"
                        android:tag="addimage2" />

                    <ImageButton
                        android:id="@+id/rmimage1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/addimage1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="5dp"
                        android:background="#00ffffff"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_close_browser"
                        android:tint="#cc0044"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/addimage2"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/addimage2"
                        android:tag="addimage2" />

                    <ImageButton
                        android:id="@+id/rmimage2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_below="@+id/addimage2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="5dp"
                        android:background="#00ffffff"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_close_browser"
                        android:tint="#cc0044"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/addimage3"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/addimage2"
                        android:tag="addimage2" />

                    <ImageButton
                        android:id="@+id/rmimage3"
                        android:layout_width="35dp"
                        android:layout_height="350dp"
                        android:layout_below="@+id/addimage3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="5dp"
                        android:background="#00ffffff"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_close_browser"
                        android:tint="#cc0044"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/addimage4"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/addimage2"
                        android:tag="addimage2" />

                    <ImageButton
                        android:id="@+id/rmimage4"
                        android:layout_width="35dp"
                        android:layout_height="350dp"
                        android:layout_below="@+id/addimage4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="5dp"
                        android:background="#00ffffff"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_close_browser"
                        android:tint="#cc0044"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/addimage5"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/addimage2"
                        android:tag="addimage2" />

                    <ImageButton
                        android:id="@+id/rmimage5"
                        android:layout_width="35dp"
                        android:layout_height="350dp"
                        android:layout_below="@+id/addimage5"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="5dp"
                        android:background="#00ffffff"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_close_browser"
                        android:tint="#cc0044"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/addimage6"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/addimage2"
                        android:tag="addimage2" />

                    <ImageButton
                        android:id="@+id/rmimage6"
                        android:layout_width="35dp"
                        android:layout_height="350dp"
                        android:layout_below="@+id/addimage6"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="5dp"
                        android:background="#00ffffff"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_close_browser"
                        android:tint="#cc0044"
                        android:visibility="gone" />

                </RelativeLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/novoEncontradoPager"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="15dp">

            <EditText
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:elevation="2dp"
                android:hint="Titulo do Anúncio *"
                android:inputType="text"
                android:paddingTop="5dp" />

            <info.hoang8f.android.segmented.SegmentedGroup
                android:id="@+id/tipoAnimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:orientation="horizontal"
                app:sc_border_width="1dp"
                app:sc_checked_text_color="#eee"
                app:sc_corner_radius="0dp"
                app:sc_tint_color="@color/colorAccent">

                <RadioButton
                    android:id="@+id/tipoCachorro"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="@dimen/encontrado_sexotipo_width"
                    android:padding="15dp"
                    android:text="Cachorro"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/tipoGato"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="@dimen/encontrado_sexotipo_width"
                    android:padding="15dp"
                    android:text="Gato"
                    android:textSize="18sp" />


            </info.hoang8f.android.segmented.SegmentedGroup>

            <info.hoang8f.android.segmented.SegmentedGroup
                android:id="@+id/sexoAnimal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:orientation="horizontal"
                app:sc_border_width="1dp"
                app:sc_checked_text_color="#eee"
                app:sc_corner_radius="0dp"
                app:sc_tint_color="@color/colorAccent">

                <RadioButton
                    android:id="@+id/sexoFem"
                    style="@style/RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:width="@dimen/encontrado_sexotipo_width"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="Fêmea"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/sexoMasc"
                    style="@style/RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:width="@dimen/encontrado_sexotipo_width"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="Macho"
                    android:textSize="18sp" />

            </info.hoang8f.android.segmented.SegmentedGroup>

            <info.hoang8f.android.segmented.SegmentedGroup
                android:id="@+id/porteAnimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:orientation="horizontal"
                app:sc_border_width="1dp"
                app:sc_checked_text_color="#eee"
                app:sc_corner_radius="0dp"
                app:sc_tint_color="@color/colorAccent">

                <RadioButton
                    android:id="@+id/portePeq"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="@dimen/encontrado_porte_width"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="Pequeno"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/porteMed"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="@dimen/encontrado_porte_width"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="Médio"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/porteGra"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="@dimen/encontrado_porte_width"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="Grande"
                    android:textSize="18sp" />
            </info.hoang8f.android.segmented.SegmentedGroup>


            <EditText
                android:id="@+id/corAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="15dp"
                android:elevation="2dp"
                android:hint="Cor"
                android:inputType="text"
                android:paddingTop="20dp" />

            <EditText
                android:id="@+id/descricaoAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="20dp"
                android:elevation="2dp"
                android:ems="10"
                android:hint="Observações"
                android:inputType="textMultiLine"
                android:lines="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="20dp"
                android:text="Animal Resgatado?"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Switch
                    android:id="@+id/switchResgatado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switchTxt"
                    android:layout_marginLeft="10dp"
                    android:text="Sim"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:text="Última localização do animal"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/localizacaoRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/localizacaoAtual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Utilizar minha localização atual"
                    android:textColor="#555"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/digitaEndereco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Digitar endereço"
                    android:textColor="#555"
                    android:textSize="16sp" />
            </RadioGroup>

            <fragment
                android:id="@+id/place_autocomplete_fragment"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:elevation="2dp"
                android:inputType="text" />

            <fragment
                android:id="@+id/mapaEncontrado"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="15dp" />

            <Button
                android:id="@+id/enviaAnuncio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="25dp"
                android:background="@color/colorAccent"
                android:elevation="2dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Enviar anúncio"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18dp" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>

